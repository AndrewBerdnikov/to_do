<div class="container-4">
  <h2 class="device-form-title">Sign up</h2>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "device-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "device-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "device-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "device-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "device-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "device-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "device-submit" %>
      <%= link_to "Already have an account? Log in!", new_user_session_path %>
    </div>
  <% end %>
</div>
